<%= form_for(@enquiry) do |f| %>
<fieldset>
<legend>
Contact
</legend>

  <% if @enquiry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@enquiry.errors.count, "error") %> prohibited this enquiry from being saved:</h2>

      <ul>
      <% @enquiry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Naam" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email, "E-mail" %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone, "Telefoonnummer" %>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :message, "Vraag" %> 
    <%= f.text_area :message %>
  </div>
  <div class="actions">
    <%= f.submit "Verzenden" %>
  </div>
</fieldset>
<% end %>
