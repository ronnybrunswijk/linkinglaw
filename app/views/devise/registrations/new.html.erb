<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <%
      title =  "Registreren"
      title += " Juridische Professional" if :profile
      provide :title, title
    %>
    <h3><%= t(:sign_up, scope: [:devise, :registrations]) %></h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <% if :profile  %>
       <div class="form-group">
    	  <%= f.fields_for :profile do |profile_fields| %>
	        <%= profile_fields.label :first_name %>
    	    <%= profile_fields.text_field :first_name, class: 'form-control' %>
    	  <% end %> 
       </div>
       <div class="form-group">
    	  <%= f.fields_for :profile do |profile_fields| %>
	        <%= profile_fields.label :last_name %>
    	    <%= profile_fields.text_field :last_name, class: 'form-control' %>
    	  <% end %> 
       </div>
       <div class="form-group">
    	  <%= f.fields_for :profile do |profile_fields| %>
	        <%= profile_fields.label :business_address %>
    	    <%= profile_fields.text_field :business_address, class: 'form-control' %>
    	  <% end %> 
       </div>
       <div class="form-group">
    	  <%= f.fields_for :profile do |profile_fields| %>
	        <%= profile_fields.label :city %>
    	    <%= profile_fields.text_field :city, class: 'form-control' %>
    	  <% end %> 
       </div>
       <div class="form-group">
    	  <%= f.fields_for :profile do |profile_fields| %>
	        <%= profile_fields.label :phone %>
    	    <%= profile_fields.text_field :phone, class: 'form-control' %>
    	  <% end %> 
       </div>
       <div class="form-group">
    	  <%= f.fields_for :profile do |profile_fields| %>
	        <%= profile_fields.label :profession %>
    	    <%= profile_fields.select :profession, get_profession_options, { prompt: "Selecteer een beroep..." }, { class: 'form-control' } %>
    	  <% end %> 
       </div>
       <div class="form-group btn-group" data-toggle="buttons">
    	  <%= f.fields_for :profile do |profile_fields| %>
    	    <%= profile_fields.label :disciplinary_decision %><br>
    	    <label class="btn btn-primary active">
      	    <%= profile_fields.radio_button :disciplinary_decision, false, checked: true %> Nee    	      
    	    </label>
    	    <label class="btn btn-primary">
      	    <%= profile_fields.radio_button :disciplinary_decision, true %> Ja    	      
    	    </label>
    	  <% end %> 
       </div>
       <div class="form-group">
    	  <%= f.fields_for :profile do |profile_fields| %>
	        <%= profile_fields.label :year_of_inauguration %>
    	    <%= profile_fields.select :year_of_inauguration, get_year_of_inauguration_options, { prompt: "Selecteer een jaar..." }, { class: 'form-control' } %>
    	  <% end %> 
       </div>
       <div class="form-group">
    	  <%= f.fields_for :profile do |profile_fields| %>
	        <%= profile_fields.label :years_of_work_experience %>
    	    <%= profile_fields.select :years_of_work_experience, get_years_of_work_experience_options, { prompt: "Selecteer een aantal jaren..." }, { class: 'form-control' } %>
    	  <% end %> 
       </div>
    <% end  %>

    <%= f.submit t(:sign_up, scope: [:devise, :registrations]), :class => 'button right' %>
  <% end %>
</div>
