<% provide :title, "Vind een professional"  %>  
<div class="authform">
  <%= form_tag :search_profiles do %>
      <div  class="form-group">
          <%= label_tag "Rechtsgebieden" %><br>
          <% PracticeArea.all.each do |practice_area|%>
            <%= link_to(practice_area.name, "#", 
                        {class: "search-link", data: {search_criterion: "practice_area_id=#{practice_area.id}"}}) %>
          <% end %>
      </div>    
      <div class="form-group">
          <%= label_tag "Regio" %><br>
          <% Province.all.each do |province|%>
            <%= link_to(province.name, "#",
                        {class: "search-link", data: {search_criterion: "province_id=#{province.id}"}}) %>                        
          <% end %>
      </div>
  <% end %>
</div>
<div id="search-results">
  <%= render 'search' %> 
</div>

