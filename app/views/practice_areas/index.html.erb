<h1>Listing practice_areas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @practice_areas.each do |practice_area| %>
      <tr>
        <td><%= practice_area.name %></td>
        <td><%= practice_area.subject %></td>
        <td><%= link_to 'Show', practice_area %></td>
        <td><%= link_to 'Edit', edit_practice_area_path(practice_area) %></td>
        <td><%= link_to 'Destroy', practice_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

