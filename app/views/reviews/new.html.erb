<% provide :title, "Review een juridische professional"  %>  
<div class="authform">
  <%= form_for(@review) do |f| %>
    <h3>Review</h3>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this profile from being saved:</h2>
  
        <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
       <%= f.label :title %>
       <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
       <%= f.label :body %>
       <%= f.text_field :body, class: 'form-control' %>
    </div>
    <div class="form-group">
       <%= f.label :rating %>
       <%= f.text_field :rating, class: 'form-control' %>
    </div>
    </div>
    <%= f.hidden_field :profile_id, value: @profile_id  %>
    <div class="actions">
      <%= f.submit "Review bewaren", class: 'button right' %>
    </div>
    
  <% end  %>
</div>  