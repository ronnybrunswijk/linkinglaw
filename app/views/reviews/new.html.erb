<% provide :title, "Review een juridische professional"  %>  
<div class="authform">
  <%= form_for(@review) do |f| %>
    <h3>Review</h3>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this profile from being saved:</h2>
  
        <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
       <%= f.label :title %>
       <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
       <%= f.label :body %>
       <%= f.text_field :body, class: 'form-control' %>
    </div>
    <div class="form-group">
       <%= f.label :rating %>
       <%= f.text_field :rating, class: 'form-control' %>
    </div>

    <%= f.hidden_field :profile_id, value: @profile_id  %>
    <% if user_signed_in?  %>
      <div class="actions">
        <%= f.submit "Plaats review", class: 'button right' %>
      </div>
    <% end  %>
  <% end  %>
</div>  

<% unless user_signed_in?  %>
  <div id="review_authform" class="authform">
     <%= render partial: 'devise/sessions/new_xhr', locals: {button_label: "Plaats review"} %>
  </div>
<% end %>
