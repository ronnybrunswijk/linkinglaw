<% provide :title, t(:preview_question, scope: [:questions])  %>
<div class="authform">
<%= form_for(@question, url: {action: 'create'}) do |f| %>
  <h3><%= t(:preview_question, scope: [:questions]) %></h3>

  <div class="form-group">
    <%= @question.title %>
    <%= f.text_field :title, class: 'hidden' %>
  </div>
  <div class="form-group">
    <%= @question.description %>
    <%= f.text_field :description, class: 'hidden' %>
  </div>
  <div class="actions">
    <%= f.submit t(:submit_question, scope: [:questions]), id: 'create_question', name: 'create', class: "button right #{'hidden' unless user_signed_in? }" %>
    <%= f.submit t(:modify_question, scope: [:questions]), class: 'btn btn-default right'%> 
  </div>
<% end %>
</div>
<% unless user_signed_in?  %>
  <div class="text-center">
    <%= radio_button_tag 'auth_form','sign_in' %>
    <%= label_tag 'auth_form_sign_in','Ik heb een account' %>
    <%= radio_button_tag 'auth_form', 'sign_up' %>
    <%= label_tag 'auth_form_sign_up','Maak account aan' %>
  </div>
  <div class="authform">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'sign_in_user', :'data-type' => 'json'}, remote: true, authenticity_token: true) do |f| %>  
      <%= devise_error_messages! %>
      <div class="form-group">
        <%- if devise_mapping.registerable? %>
          <%= link_to t(:sign_up, scope: [:devise, :registrations]), new_registration_path(resource_name), class: 'right'  %>
        <% end -%>
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%- if devise_mapping.recoverable? %>
          <%= link_to t(:forgot_password, scope: [:devise, :sessions]), new_password_path(resource_name), class: 'right' %>
        <% end -%>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.submit t(:submit_question, scope: [:questions]), id: 'sign_in', class: 'button right' %>
      <% if devise_mapping.rememberable? -%>
         <div class="checkbox" style="width:150px">
            <label>
              <%= f.check_box :remember_me %> <%= t(:remember_me, scope: [:devise, :sessions]) %>
            </label>
         </div>
      <% end -%>
    <% end %>  
  </div>
<% end %>
